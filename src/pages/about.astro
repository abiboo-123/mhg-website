---
import Layout from '../layouts/BaseLayout.astro';
import TeamMember from '../components/TeamMember.astro';
import Card from '../components/Card.astro';
import { team } from '../data/team.js';
import { aboutCards } from '../data/aboutCards.js';
---

<Layout title="About Us ‚Äì MHG Ingolstadt e. V.">
  <!-- Hero Section -->
  <section class="text-center py-12 px-4 sm:px-6 md:px-8 bg-[#d7f0f7] rounded-lg max-w-6xl mx-auto mt-8">
    <h2 class="text-3xl sm:text-4xl font-bold mb-6">ü§ù About Us</h2>
    <div class="text-lg text-gray-700 leading-relaxed space-y-4">
      <p>
        <strong>The Muslimische Hochschulgruppe Ingolstadt (MHG) e. V.</strong> is a student-led organization that serves as a bridge between Muslim students and local Islamic communities in Ingolstadt.
        Our goal is to foster a welcoming environment where students can strengthen their faith, engage with Islamic knowledge, and connect with one another through religious, academic, and social activities.
      </p>
      <p>
      Whether you‚Äôre new in town, looking for prayer spaces, or hoping to join community events ‚Äî MHG is here to support your journey.
      </p>
    </div>
  </section>


  <!-- Mission / Vision Section -->
  <section class="grid grid-cols-1 md:grid-cols-3 gap-6 px-4 py-10 max-w-7xl mx-auto">
    {aboutCards.map(card => (
      <Card title={card.title} icon={card.icon} text={card.text} />
    ))}
  </section>

  <!-- Team Section -->
  <section class="max-w-7xl mx-auto px-4 py-12">
    <h3 class="text-2xl font-bold text-center mb-8">Meet the Team</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      {team.map(member => (
        <TeamMember name={member.name} role={member.role} image={member.image} />
      ))}
    </div>
  </section>

  <!-- Closing Call to Action -->
  <section class="bg-[#d7f0f7] py-10 px-4 mt-10 mb-16 rounded-lg max-w-6xl mx-auto text-center">
    <h3 class="text-xl font-semibold mb-4">"Indeed, the believers are but brothers..." (Qur'an 49:10)</h3>
    <p class="text-lg mb-4">We invite you to connect, collaborate, and contribute to our journey.</p>
    <a href="/contact" class="inline-block bg-[#0369a1] text-white px-6 py-2 rounded hover:bg-blue-800 transition">Get in Touch</a>
  </section>
</Layout>
