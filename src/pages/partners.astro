---
import Layout from '../layouts/BaseLayout.astro';
import PartnerCard from '../components/PartnerCard.astro';
import { partners } from '../data/partners.js';
---

<Layout title="Our Partners – MHG Ingolstadt">
  <section class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-center mb-6">🤝 Our Partners</h1>
    <p class="text-center text-lg text-slate-700 mb-10">
      We’re proud to collaborate with organizations and institutions that support our mission.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {partners.map(partner => (
        <PartnerCard
          name={partner.name}
          logo={partner.logo}
          description={partner.description}
          website={partner.website}
        />
      ))}
    </div>
  </section>
</Layout>
