---
import Layout from '../../layouts/BaseLayout.astro';
import { t } from '../../utils/t';
const lang = 'en';
---

<Layout title="Thank You – MHG Ingolstadt e. V." lang={lang}>
  <section class="max-w-3xl mx-auto px-4 py-16">
    <div class="bg-white rounded-xl shadow-md p-8 text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-green-700 mb-4">✅ {t("register.thankYou", lang)}</h1>
      <p class="text-gray-700 text-lg mb-6">
        {t("register.successMessage", lang)}
      </p>
      <p class="text-gray-600 mb-8">
        {t("register.seeYouMessage", lang)}
      </p>
      <a
        href=`/${lang}/events`
        class="inline-block bg-[#0369a1] text-white px-6 py-2 rounded-full hover:bg-blue-800 transition"
      >
        ← {t("register.backToEvents", lang)}
      </a>
    </div>
  </section>
</Layout>
