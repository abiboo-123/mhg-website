---
import { links } from '../data/links.js';
---

<footer class="bg-[#0369a1] text-white text-center py-6 text-sm">
  <div class="flex justify-center space-x-4 mb-2">
    <a href={links.instagram} class="hover:text-sky-400 transition" target="_blank">Instagram</a>
    <a href={links.whatsapp} class="hover:text-sky-400 transition" target="_blank">WhatsApp</a>
    <a href={links.facebook} class="hover:text-sky-400 transition" target="_blank">Facebook</a>
    <a href={links.youtube} class="hover:text-sky-400 transition" target="_blank">YouTube</a>
  </div>
  <p class="mb-1">
    Contact us: <a href={`mailto:${links.email}`} class="underline hover:text-sky-400 transition">{links.email}</a>
  </p>
  <p>&copy; 2025 MHG Ingolstadt e. V. All rights reserved.</p>
</footer>
